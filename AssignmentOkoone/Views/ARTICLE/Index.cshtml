<table class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ARTICLE_TITLE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DESCRIPTION)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CREATED_AT)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ARTICLE_TITLE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DESCRIPTION)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CREATED_AT)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "ARTICLE",new { id = item.ID })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Details", "ARTICLE",new { id = item.ID })" class="btn btn-default">Details</a>
                    <a href="@Url.Action("Delete", "ARTICLE" ,new { id=item.ID })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
            var table = $('#dataTables-example').DataTable();

            // #myInput is a <input type="text"> element
            $('#myInput').on('keyup', function () {
                table.search(this.value).draw();
            });
        });
    </script>
}

